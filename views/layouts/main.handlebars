<body>
    {{{ body }}}

    <script>
        //upon clicking submit,
        $("#submit").on("click", function (event) {
            event.preventDefault();
            var newBurger = {
                name: $("#burgerinput").val().trim()
            };

            // Send the POST request.
            $.ajax("/", {
                type: "POST",
                data: newBurger
            }).then(
                function () {
                    console.log("created new burg");
                    // Reload the page to get the updated list
                    location.reload();
                }
            );
        })

        //upon clicking devour
        $(".devour").on('click', function () {

            var getEaten = {
                id: $(this).attr('id'),
                choice: 1
            };

            $.ajax("/", {
                type: "PUT",
                data: getEaten
            }).then(
                function () {

                    // Reload the page to get the updated list
                    location.reload();
                }
            );




        })

        //upon clicking undevour
        $(".undevour").on('click', function () {
         
            var getEaten = {
                id: $(this).attr('id'),
                choice: 0
            };

            $.ajax("/", {
                type: "PUT",
                data: getEaten
            }).then(
                function () {

                    // Reload the page to get the updated list
                    location.reload();
                }
            );
        })




    </script>




</body>

</html>